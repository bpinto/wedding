%article
  .title= post.title
  .content.collapsed
    = truncate(post.content, length: 350) { link_to 'Ler mais', '#', class: 'read-more' }
  .content.expanded
    %span= post.content
    .fb-comments{ data: { href: post_url(post), numposts: '5', colorscheme: 'light' } }
  .date= l Date.today, format: :small
