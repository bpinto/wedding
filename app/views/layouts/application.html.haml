%head
  = render partial: 'javascripts/mobify'

  %title Bianca & Bruno

  %meta{ charset: 'utf-8'}
  %meta{ 'http-equiv' => 'X-UA-Compatible', content: 'IE=edge,chrome=1' }
  %meta{ name: 'description', content: 'Site sobre o casamento da Bianca e do Bruno' }
  %meta{ name: 'keywords', content: 'casamento bianca bruno rio de janeiro wedding' }
  %meta{ name: 'viewport', content: 'width=device-width,initial-scale=1' }
  %meta{ name: 'HandheldFriendly', content: 'True' }
  %meta{ name: 'MobileOptimized', content: '320' }

  %link{ href: "/favicon.ico", rel: "shortcut icon", type: "image/x-icon" }
  %link{ href: "/apple-touch-icon.png", rel: "apple-touch-icon" }
  %link{ href: "/apple-touch-icon-57x57.png", rel: "apple-touch-icon", sizes: "57x57" }
  %link{ href: "/apple-touch-icon-72x72.png", rel: "apple-touch-icon", sizes: "72x72" }
  %link{ href: "/apple-touch-icon-76x76.png", rel: "apple-touch-icon", sizes: "76x76" }
  %link{ href: "/apple-touch-icon-114x114.png", rel: "apple-touch-icon", sizes: "114x114" }
  %link{ href: "/apple-touch-icon-120x120.png", rel: "apple-touch-icon", sizes: "120x120" }
  %link{ href: "/apple-touch-icon-144x144.png", rel: "apple-touch-icon", sizes: "144x144" }
  %link{ href: "/apple-touch-icon-152x152.png", rel: "apple-touch-icon", sizes: "152x152" }

  = stylesheet_link_tag :application, media: 'all'
  = csrf_meta_tag

%body{ 'data-mobile-width' => 768 }
  %script{ type: 'text/javascript', src: 'https://maps.googleapis.com/maps/api/js?key=AIzaSyD8ODl6XHDVqXIugBZlDK4jwLKQqyuldn8&libraries=places&sensor=true' }

  %input{ type: 'checkbox', id: 'nav-handler' }
  #mobile-top-menu{ 'data-scroll-mobile' => true }
    %label{ id: 'menu-button', for: 'nav-handler' } Menu
    .name<
      Bianca
      %i.heart.fa.fa-heart
      Bruno

  %nav{ 'data-scroll-computer' => true }
    %ul
      %li= navigation_link_to 'Cerimônia', '#ceremony'
      %li= navigation_link_to 'Nossa História', '#our_history'
      = link_to (request.path == root_path ? '' : root_path) + '#nav-handler', class: 'logo', data: { scroll: true } do
        .name<
          Bianca
          %i.heart.fa.fa-heart
          Bruno
        .date 30 de Agosto, 2014
      %li= navigation_link_to 'Nosso Casamento', '#our_wedding'
      %li= link_to 'Lista de Presentes', products_path

  %article
    = yield

  .clear
  %footer

  = javascript_include_tag :application
  = yield :javascript
